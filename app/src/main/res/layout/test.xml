<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/white_bg">

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hey, Gawtham"
            android:textColor="@color/colorblack"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_name"
            android:text="What is your next trip?" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r1"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/blue_circle" />

        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="130dp"
            android:layout_below="@+id/et_from"
            android:layout_marginLeft="5dp"
            android:background="@color/colorgray" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/red_circle"

            />

        <View
            android:id="@+id/view3"
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:layout_below="@+id/et_from"
            android:layout_marginLeft="5dp"
            android:background="@color/colorgray" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/blue_circle"

            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r1"
        android:layout_marginLeft="60dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txt_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="From"


            android:textSize="20dp" />

        <EditText
            android:id="@+id/txt_ffrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="20dp" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/r3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l2"
        android:layout_marginLeft="30dp"
        android:orientation="vertical">


        <View
            android:id="@+id/viewhori"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_below="@+id/et_from"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="22dp"
            android:background="@color/colorgray"

            />

        <Button
            android:id="@+id/btn_updownarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@mipmap/up_down_arrow"

            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/r4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r3"
        android:layout_marginLeft="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To"


            android:textSize="20dp" />

        <EditText
            android:id="@+id/txt_addressto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/r5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r4"
        android:layout_marginLeft="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_to2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/txt_addressto2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="20dp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/l6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r5"
        android:layout_margin="20dp"

        >

        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@mipmap/add"

            />

    </RelativeLayout>


